{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}
